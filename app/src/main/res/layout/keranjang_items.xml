<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/keranjangImg"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY">
        </ImageView>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/keranjangName"
                android:textStyle="bold"
                android:text="Product Name"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/keranjangId"
                android:visibility="invisible"
                android:textSize="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    app:backGroundColor="@color/purple_500"
                    app:initialNumber="1"
                    android:id="@+id/keranjangJumlah"
                    android:layout_width="100dp"
                    android:layout_height="30dp">
                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/deleteById"
                    android:background="@drawable/ic_trash"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15dp"
                    android:text="Total Harga : Rp. "
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/keranjangHarga"
                    android:layout_marginLeft="3dp"
                    android:textSize="15dp"
                    android:text="100"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Notes :"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/keranjangNotes"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/light_grey"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="3dp">
    </LinearLayout>
</LinearLayout>